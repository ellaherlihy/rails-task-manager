<body>
  <h1>Add a task</h1>
  <br>
  <br>
  <div style="hl">
    <%= form_for(@task) do |f| %>
    <div class="form-inputs">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-inputs">
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <div class="form-inputs">
      <%= f.label :completed, "Completed?" %>
      <%= f.check_box :completed %>
    </div>
      <a class="btn-design"><%= f.submit %></a>
    <% end %>
  </div>
</body>
